<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Event Manager" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <% if @snackbar_data.present? %>
    <!-- Snackbar data for JS processing -->
    <meta name="snackbar-data" content="<%= @snackbar_data.to_json %>" />
    <% end %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- Toastr CSS via gem -->
    <%= stylesheet_link_tag "toastr" %>
    <%= javascript_include_tag "toastr" %>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <% if current_resource_owner.is_a?(AdminUser) %>
          <%= link_to "Event Manager", events_path, class: "navbar-brand text-white fw-bold" %>
        <% elsif current_resource_owner&.userable_type == "Host" %>
          <%= link_to "Event Manager", hosted_events_path, class: "navbar-brand text-white fw-bold" %>
        <% else %>
          <%= link_to "Event Manager", filtered_events_path, class: "navbar-brand text-white fw-bold" %>
        <% end %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
              <% if current_resource_owner.is_a?(AdminUser) %>
                <li class="nav-item">
                  <%= link_to "All Events", events_path, class: "nav-link text-white" %>
                </li>
                <li class="nav-item">
                  <%= link_to "View Other Events", other_events_path, class: "nav-link text-white" %>
                </li>
              <% elsif current_resource_owner&.userable_type == "Host" %>
                <li class="nav-item">
                  <%= link_to "My Events", hosted_events_path, class: "navbar-brand text-white fw-bold" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Create Event", new_event_path, class: "nav-link text-white" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Past Events", past_events_path, class: "nav-link text-white" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Add Venue Review", new_venue_review_path(venue_id: 1), class: "nav-link text-white" %>
                </li>
              <% elsif current_resource_owner&.role == "participant" %>
                <li class="nav-item">
                  <%= link_to "Change Category", change_category_path, class: "nav-link text-white" %>
                </li>
                <li class="nav-item">
                  <%= link_to "My Profile", profile_path, class: "nav-link text-white" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Past Events", past_events_path, class: "nav-link text-white" %>
                </li>
              <% end %>

              <li class="nav-item">
                <%= button_to "Logout", destroy_user_session_path, method: :delete,
                    form: { data: { turbo: false }, class: "d-inline" },
                    class: "nav-link btn btn-link text-white", style: "padding: 0;" %>
              </li>
            <% else %>
              <% unless [root_path, new_user_session_path, new_user_registration_path].include?(request.path) %>
                <li class="nav-item">
                  <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Sign Up", new_user_registration_path, class: "nav-link text-white" %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash messages for toastr -->
    <% if flash[:notice] %>
      <div class="flash-notice" style="display:none;"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="flash-alert" style="display:none;"><%= flash[:alert] %></div>
    <% end %>
    <% if flash[:error] %>
      <div class="flash-error" style="display:none;"><%= flash[:error] %></div>
    <% end %>

    <!-- Main Content -->
    <div class="container py-4">
      <%= yield %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

    <!-- Toastr JS via gem -->
    <%= javascript_include_tag "toastr" %>

    <!-- JavaScript (ESM + Turbo + Stimulus) -->
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
    
    <script>
      // Toastr configuration
      // Flash messages with toastr using our helper
      <%= toastr_flash_messages if flash.any? %>
      
      <% if @snackbar_js %>
      // Immediate snackbar notification (non-redirected)
      <%= @snackbar_js %>
      <% end %>
    </script>
  </body>
</html>
