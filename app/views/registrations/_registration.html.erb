<div id="<%= dom_id registration %>">
  <div class="card shadow-sm p-4 h-100">
    <div class="mb-2">
      <span class="fw-bold text-primary">Participant:</span>
      <span><%= registration.participant&.name %></span>
    </div>
    <div class="mb-2">
      <span class="fw-bold text-success">Amount Paid:</span>
      <span><%= registration.payment&.amount.present? ? number_to_currency(registration.payment.amount) : '<span class="text-danger">Not paid</span>'.html_safe %></span>
    </div>
    <div>
      <span class="fw-bold">Registered At:</span>
      <span><%= registration.created_at.strftime('%d %b %Y, %I:%M %p') %></span>
    </div>
  </div>
</div>
