<div class="container my-5">
  <h2 class="text-center mb-4">🎫 Your Ticket</h2>

  <% if notice %>
    <div class="alert alert-success text-center">
      <%= notice %>
    </div>
  <% end %>

  <% if @ticket.present? %>
    <div class="card shadow-sm p-4 bg-light">
      <h4 class="mb-3">Ticket Details</h4>
      <p><strong>🎟️ Ticket Number:</strong> <%= @ticket.ticket_number %></p>
      <p><strong>🕒 Issued At:</strong> <%= @ticket.issued_at.strftime("%d %b %Y, %I:%M %p") %></p>
    </div>
  <% else %>
    <div class="alert alert-warning">
      No ticket was found.
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "⬅ Back to Events", filtered_events_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
