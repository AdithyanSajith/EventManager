<!-- app/views/participants/choose_category.html.erb -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Choose Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container mt-5">
      <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4">Choose Your Preferred Category</h2>
        <p class="text-center">Select your preferred category to filter events:</p>

        <%= form_with url: set_preference_path, method: :post, local: true do |form| %>
          <div class="mb-3">
            <%= form.label :interest, "Choose a Category", class: "form-label" %>
            <%= form.collection_select :interest, @categories, :id, :name, prompt: "Select Category", class: "form-select" %>
          </div>
          <%= form.submit "Save Preference", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
  </body>
</html>
