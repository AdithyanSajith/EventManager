<h2 class="mb-4">👤 My Profile</h2>

<div class="card shadow-sm">
  <div class="card-body">
    <% if @participant && @participant.user %>
      <dl class="row">
        <dt class="col-sm-4">Name</dt>
        <dd class="col-sm-8"><%= @participant.name %></dd>

        <dt class="col-sm-4">Email</dt>
        <dd class="col-sm-8"><%= @participant.user.email %></dd>

        <dt class="col-sm-4">Interest</dt>
        <dd class="col-sm-8"><%= @participant.interest.presence || "Not provided" %></dd>

        <dt class="col-sm-4">City</dt>
        <dd class="col-sm-8"><%= @participant.city.presence || "Not provided" %></dd>

        <dt class="col-sm-4">Birthdate</dt>
        <dd class="col-sm-8">
          <%= @participant.birthdate.present? ? @participant.birthdate.strftime('%d %B %Y') : "Not provided" %>
        </dd>

        <% if @participant.user.respond_to?(:number) && @participant.user.number.present? %>
          <dt class="col-sm-4">Contact Number</dt>
          <dd class="col-sm-8"><%= @participant.user.number %></dd>
        <% end %>
      </dl>

      <%= link_to "✏️ Edit Profile", edit_user_registration_path, class: "btn btn-primary mt-3" %>
    <% else %>
      <div class="alert alert-danger mt-4">Profile information is not available. Please contact support.</div>
    <% end %>
  </div>
</div>
