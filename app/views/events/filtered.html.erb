<div class="container my-5">
  <h2 class="mb-4 text-center">
    Events in your preferred category: <%= Category.find_by(id: current_user.interest)&.name || "None" %>
  </h2>

  <% if @events.any? %>
    <% @events.each do |event| %>
      <% registration = Registration.find_by(participant_id: current_user.id, event_id: event.id) %>
      <% ticket = registration&.ticket %>

      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h4 class="card-title fw-bold">ğŸ¤ <%= event.title %></h4>
          <p><strong>Description:</strong> <%= event.description %></p>
          <p><strong>Starts at:</strong> <%= event.starts_at.strftime("%d %b %Y, %I:%M %p") %></p>
          <p><strong>Ends at:</strong> <%= event.ends_at.strftime("%d %b %Y, %I:%M %p") %></p>
          <p><strong>Venue:</strong> <%= event.venue.name %></p>
          <p><strong>Category:</strong> <%= event.category.name %></p>

          <div class="d-flex gap-2 mt-3">
            <% if ticket.present? %>
              <%= link_to "ğŸ« View Ticket", ticket_path(ticket), class: "btn btn-info" %>
            <% else %>
              <%= link_to "ğŸ’³ View & Pay", new_event_payment_path(event), class: "btn btn-primary" %>
            <% end %>

            <%= link_to "âœï¸ Write Review", new_event_review_path(event), class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info text-center">
      No events found in your preferred category.
    </div>
  <% end %>
</div>
