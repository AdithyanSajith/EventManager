<% content_for :title, "Other Hosts' Events" %>

<div class="container py-4">
  <h2 class="text-center mb-4">ðŸ“Œ Events by Other Hosts</h2>

  <% if @events.any? %>
    <ul class="list-group">
      <% @events.each do |event| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= render partial: "event", locals: { event: event } %>
          <%= link_to "View", event_path(event), class: "btn btn-outline-primary btn-sm" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted text-center mt-3">No events found from other hosts.</p>
  <% end %>
</div>
