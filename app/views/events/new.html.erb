<%= form_with(model: @event, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter event title" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Enter event description" %>
  </div>

  <div class="mb-3">
    <%= form.label :starts_at %>
    <%= form.datetime_select :starts_at, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :ends_at %>
    <%= form.datetime_select :ends_at, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :venue_id, "Venue" %>
    <div class="d-flex align-items-center gap-3">
      <%= form.collection_select :venue_id, Venue.all, :id, :name, prompt: "Choose Venue", class: "form-select" %>
      <%= link_to "âž• Add Venue", new_venue_path, class: "btn btn-outline-secondary btn-sm", target: "_blank" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, "Category" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Choose Category", class: "form-select" %>
  </div>

  <div class="mt-4">
    <%= form.submit "Create Event", class: "btn btn-success w-100" %>
  </div>
<% end %>
