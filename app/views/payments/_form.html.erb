<%= form_with(model: payment) do |form| %>
  <% if payment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, value: payment.registration.event.fee, readonly: true %>
    <small class="text-muted">(Set by host, not editable)</small>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :paid_at, style: "display: block" %>
    <%= form.datetime_field :paid_at %>
  </div>

  <div>
    <%= form.label :registration_id, style: "display: block" %>
    <%= form.text_field :registration_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
