<div class="container my-5">
  <h2 class="mb-4">ğŸ’³ Make a Payment for <%= @event.title %></h2>

  <%= form_with model: [@event, @payment], local: true do |f| %>
    <div class="mb-3">
      <%= f.label :amount, "Amount" %>
      <%= f.number_field :amount, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :card_number, "Card Number" %>
      <%= f.text_field :card_number, class: "form-control", required: true %>
    </div>

    <%= f.submit "Pay Now", class: "btn btn-success" %>
  <% end %>
</div>
