<%= form_with model: [@event, Payment.new], local: true do |form| %>
  <div class="mb-3">
    <label for="amount" class="form-label">Amount</label>
    <%= form.text_field :amount, class: "form-control", readonly: true, value: 100.0 %>
  </div>

  <div class="mb-3">
    <label for="card_number" class="form-label">Card Number</label>
    <%= form.text_field :card_number, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Pay Now", class: "btn btn-success" %>
  </div>
<% end %>
