<%= form_with(model: [@reviewable, @review], local: true) do |form| %>
  <% if @review.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@review.errors.count, "error") %> error(s) prohibited this review from being saved:</h4>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 5, required: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :comment %>
    <%= form.text_area :comment, rows: 4, required: true, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.submit "Submit Review", class: "btn btn-primary" %>
  </div>
<% end %>
