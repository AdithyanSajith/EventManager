<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, required: true, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :role %><br />
    <%= f.select :role, options_for_select([["Host", "host"], ["Participant", "participant"]]), {}, class: "form-control", required: true %>
  </div>

  <%# These fields are shown conditionally with JS ideally. But for simplicity, show all %>

  <div class="field mb-3">
    <%= f.label :interest %><br />
    <%= f.text_area :interest, rows: 2, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :city %><br />
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :birthdate %><br />
    <%= f.date_select :birthdate, start_year: 1950, end_year: Date.today.year, include_blank: true, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :organisation %><br />
    <%= f.text_field :organisation, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :website %><br />
    <%= f.text_field :website, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, rows: 2, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :number, "Contact Number" %><br />
    <%= f.telephone_field :number, maxlength: 10, pattern: "\\d{10}", title: "Enter a 10-digit number", class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", required: true, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true, class: "form-control" %>
    <% if @minimum_password_length %>
      <small><%= @minimum_password_length %> characters minimum</small>
    <% end %>
  </div>

  <div class="field mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
